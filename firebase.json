{
  "hosting": {
    "public": "front/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "server",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "fixtures"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" ci"
      ]
    }
  ],
  "artifactRegistry": {
    "location": "us-central1",
    "repository": "gcf-artifacts",
    "cleanup": {
      "policy": {
        "keepDays": 30,
        "keepVersionsPerFunction": 5
      }
    }
  }
}